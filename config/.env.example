# Configuration des stratégies d'écriture EXIF par défaut

# Stratégies globales
DEFAULT_STRATEGY=preserve_existing
DESCRIPTION_STRATEGY=write_if_missing
PEOPLE_STRATEGY=clean_duplicates
KEYWORDS_STRATEGY=clean_duplicates
RATING_STRATEGY=preserve_existing
DATETIME_STRATEGY=replace_all
GPS_STRATEGY=replace_all
LOCATION_STRATEGY=replace_all
SOURCE_APP_STRATEGY=write_if_missing

# Options globales
USE_LOCALTIME=false
IMMEDIATE_DELETE_SIDECARS=false
ENABLE_GEOCODING=false

# Configuration ExifTool
EXIFTOOL_TIMEOUT=30
EXIFTOOL_CHARSET=UTF8

# Configuration de normalisation
NORMALIZE_PERSON_NAMES=true
ALBUM_PREFIX=Album: 
KEYWORDS_NORMALIZE=true

# Fichiers et extensions
VIDEO_EXTENSIONS=.mp4,.mov,.m4v,.3gp
IMAGE_EXTENSIONS=.jpg,.jpeg,.png,.tiff,.tif,.heic,.webp

# Tags personnalisés (format: source_field:target_tag:strategy)
CUSTOM_MAPPINGS=
# Exemple: my_custom_field:XMP:MyCustomTag:replace_all
